#include <stdio.h>
#include <stdlib.h>
//Faça um programa em linguagem C, que:
// Leia duas notas de um aluno na disciplina de programação estruturada
//e imprima sua media na disciplina:

int main()
{
    float nota1, nota2, media;
    printf("informe o valor da nota1:");
    scanf("%f", &nota1);
    printf("informe o valor da nota2:");
    scanf("%f", &nota2);
    media = (nota1 +nota2)/2;
    printf(" A media sera de: %.2f\n", media);

    return 0;
}
